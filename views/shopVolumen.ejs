<script>
	var bandera=0;
	function mostrarFiltroMovil(){
	  var boton = document.getElementsByName("botonFill")[0];	
	  var filtro = document.getElementsByName("filtro")[0];
	 
		boton.style.color="#095600";
		filtro.style.display="inline-block";
		filtro.style.position="fixed";
		filtro.style.zIndex="2";
		filtro.style.background="#ffffff"
		filtro.style.paddingTop = "-15px";
	 
		
		
		  if(bandera===1){
		   filtro.style.display="none";
		   bandera=0;
		  boton.style.color="#000000";
		  }else{ bandera++;  filtro.style.display="inline-block";  			}
		
			
	}
</script>
